# ----------
# Night Mode
# ----------
# Richard Rabe
# i3 config file (v4)

# colors
set $border     #2b303bCC
set $background #2b303bCC
set $text       #a7adbaFF
set $active     #bf616aFF
set $inactive   #a7adbaFF

# font for window titles and bar
font pango:DejaVu Sans Mono 8

# use win key
set $mod Mod1

# use these keys for focus, movement, and resize directions
set $left   j
set $down   k
set $up     l
set $right  odiaeresis

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# control focused window when follows the mouse movements
focus_follows_mouse yes

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal -e fish

# kill focused window
bindsym $mod+Shift+q kill

# start a program launcher
bindsym $mod+space exec --no-startup-id rofi -show run

# change focus
bindsym $mod+$left  focus left
bindsym $mod+$down  focus down
bindsym $mod+$up    focus up
bindsym $mod+$right focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left   focus left
bindsym $mod+Down   focus down
bindsym $mod+Up     focus up
bindsym $mod+Right  focus right

# move focused window
bindsym $mod+Shift+$left    move left
bindsym $mod+Shift+$down    move down
bindsym $mod+Shift+$up      move up
bindsym $mod+Shift+$right   move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left     move left
bindsym $mod+Shift+Down     move down
bindsym $mod+Shift+Up       move up
bindsym $mod+Shift+Right    move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+d focus child

# set popups during fullscreen mode
popup_during_fullscreen smart

# customize workspace names
set $WS1 "1:    Terminal "
set $WS2 "2:    Files "
set $WS3 "3:    Webbrowser "
set $WS4 "4:    Music "
set $WS5 "5:    Office "
set $WS6 "6:    Graphic "
set $WS7 "7:    "
set $WS8 "8:    Chat "
set $WS9 "9:    "

# switch to workspace
bindsym $mod+1 workspace $WS1
bindsym $mod+2 workspace $WS2
bindsym $mod+3 workspace $WS3
bindsym $mod+4 workspace $WS4
bindsym $mod+5 workspace $WS5
bindsym $mod+6 workspace $WS6
bindsym $mod+7 workspace $WS7
bindsym $mod+8 workspace $WS8
bindsym $mod+9 workspace $WS9
bindsym $mod+0 workspace $WS10

# move focused container to workspace and follow
bindsym $mod+Shift+1 move container to workspace $WS1; workspace $WS1
bindsym $mod+Shift+2 move container to workspace $WS2; workspace $WS2
bindsym $mod+Shift+3 move container to workspace $WS3; workspace $WS3
bindsym $mod+Shift+4 move container to workspace $WS4; workspace $WS4
bindsym $mod+Shift+5 move container to workspace $WS5; workspace $WS5
bindsym $mod+Shift+6 move container to workspace $WS6; workspace $WS6
bindsym $mod+Shift+7 move container to workspace $WS7; workspace $WS7
bindsym $mod+Shift+8 move container to workspace $WS8; workspace $WS8
bindsym $mod+Shift+9 move container to workspace $WS9; workspace $WS9

# startup applications
exec --no-startup-id xset s off -dpms &
exec --no-startup-id xset b 0 0 0 &
exec --no-startup-id nitrogen --restore &
exec --no-startup-id fcitx &
exec --no-startup-id nm-applet &
exec --no-startup-id redshift &
exec --no-startup-id ~/.local/bin/hdmi-check
exec --no-startup-id compton -b --config ~/.config/compton.night.conf
#exec_always --no-startup-id ~/.config/polybar/launch.sh

# assign classes
assign [class="Thunar"] $WS2
assign [class="Firefox"] $WS3
assign [class="Chromium"] $WS3
assign [class="Vlc"] $WS4
assign [class="Audacity"] $WS4
assign [class="(?i)libreoffice"] $WS5
assign [class="Gimp"] $WS6
assign [class="Darktable"] $WS6
assign [class="Inkscape"] $WS6
assign [class="Line"] $WS8

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace
bindsym $mod+Shift+r restart
# exit i3
bindsym $mod+Shift+e exec i3-msg exit
#bindsym $mod+Shift+e exec "i3-nagbar -t warning -f 'pango:Monaco 8' -m 'Do you really want to exit?' -b ' Exit  ' 'i3-msg exit'"

# TITLEBAR FORMAT
# We first set the titlebar font size to a large size to get a good padding amount.
# We then use pango markup to force i3 to print with the desired font.
# This gives us large titlebars with a small font. :P
font pango:Monaco 28
for_window [class=".*"] title_format "<span font='Monaco 10'>  %title</span>"

# BORDER
new_window pixel 0

# mousepad glitch fix
hide_edge_borders both

# show/hide border
bindsym $mod+shift+b [class="^.*"] border toggle

# toggle border
set $mode_border Toggle border: (1) off (2) small (3) big
bindsym $mod+b mode "$mode_border"

mode "$mode_border" {
    bindsym 1 mode "default", border pixel 0
    bindsym 2 mode "default", border pixel 3
    bindsym 3 mode "default", border pixel 10
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# FLOATING WINDOWS
#for_window [class="^.*"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [title="Preferences$"] floating enable

# toggle tile/float
set $mode_tile Toggle tile/float: Tile (1) Float (2)
bindsym $mod+Shift+space mode "$mode_tile"

mode "$mode_tile" {
    bindsym 1 mode "default", [class="^.*"] floating disable, [class="^.*"] border toggle
    bindsym 2 mode "default", [class="^.*"] floating enable, [class="^.*"] border toggle, [class="^.*"] border toggle
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# GAPS
#smart_gaps on
gaps inner 30
gaps outer 10

# Toggle Gaps
set $mode_gaps Toggle gaps: (1) off (2) small (3) big
bindsym $mod+n mode "$mode_gaps"

mode "$mode_gaps" {
    bindsym 1 mode "default", gaps inner all set 0, gaps outer all set 0
    bindsym 2 mode "default", gaps inner all set 30, gaps outer all set 10
    bindsym 3 mode "default", gaps inner all set 40, gaps outer all set 20
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# RESIZE
set $mode_resize Größe verändern
bindsym $mod+r mode "$mode_resize"

mode "$mode_resize" {
        bindsym $left   resize shrink width 10 px or 10 ppt
        bindsym $down   resize grow height 10 px or 10 ppt
        bindsym $up     resize shrink height 10 px or 10 ppt
        bindsym $right  resize grow width 10 px or 10 ppt

        bindsym Left    resize shrink width 20 px or 20 ppt
        bindsym Down    resize grow height 20 px or 20 ppt
        bindsym Up      resize shrink height 20 px or 20 ppt
        bindsym Right   resize grow width 20 px or 20 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# window colors         Border      Background  Text        Indicator   Child_Border
client.focused          $inactive   $inactive   $background $background $background
client.focused_inactive $inactive   $inactive   $background $background $background
client.unfocused        $inactive   $inactive   $background $background $background
client.urgent           $background $background $text       $background $background
client.placeholder      $background $background $text       $background $background
client.background       $background

# start i3bar to display a workspace bar
bar {
  i3bar_command i3bar
  mode dock
  position bottom
  height 40
  tray_padding 8
  tray_output none
  font pango:Monaco 12
  strip_workspace_numbers yes
  status_command conky -c $HOME/.config/i3/conky/conkyrc

  colors {
    background $background
    statusline $text
    separator $background
    #class             border   bg            text
    focused_workspace  $active  $active       $background
    active_workspace   $border  $background   $active
    inactive_workspace $border  $background   $inactive
    urgent_workspace   $border  $background   $inactive
  }
}

# toggle i3bar
bindsym --release $mod+m bar mode toggle

# Audio
bindsym --release XF86AudioRaiseVolume exec --no-startup-id amixer -c 1 sset 'Master' 5%+ && paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga
bindsym --release XF86AudioLowerVolume exec --no-startup-id amixer -c 1 sset 'Master' 5%- && paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga
bindsym --release Shift+XF86AudioRaiseVolume exec --no-startup-id  amixer -c 1 sset 'Master' 15%+ && paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga
bindsym --release Shift+XF86AudioLowerVolume exec --no-startup-id  amixer -c 1 sset 'Master' 15%- && paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga
bindsym --release XF86AudioMute exec --no-startup-id amixer sset 'Master' toggle
bindsym --release $mod+F6 exec --no-startup-id amixer -c 1 sset 'Master' 5%+ && paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga
bindsym --release $mod+F5 exec --no-startup-id amixer -c 1 sset 'Master' 5%- && paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga
bindsym --release $mod+F3 exec --no-startup-id amixer sset 'Master' toggle

# sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 2
bindsym Shift+XF86MonBrightnessUp exec xbacklight -inc 15
bindsym XF86MonBrightnessDown exec xbacklight -dec 2
bindsym Shift+XF86MonBrightnessDown exec xbacklight -dec 15

# redshift
bindsym --release $mod+ctrl+r exec ~/.local/bin/red.sh

# vlc
bindsym --release $mod+Down exec --no-startup-id audioinfo vlc --action playpause
bindsym --release $mod+Left exec --no-startup-id audioinfo vlc --action prev
bindsym --release $mod+Right exec --no-startup-id audioinfo vlc --action next

# monitor
bindsym --release $mod+p exec --no-startup-id /home/rene/.local/bin/hdmi-check
bindsym --release XF86Display exec --no-startup-id /home/rene/.local/bin/hdmi-check

# lock screen
bindsym $mod+Shift+x exec ~/.local/bin/i3lock-blur

# screenshot
bindsym --release Print exec --no-startup-id scrot /run/media/rene/HDD/tmp/
